{
  "editor.formatOnSave": true, // Formata o código automaticamente ao salvar
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Define o Prettier como formatador padrão
  "editor.codeActionsOnSave": {
    // Ações de código ao salvar
    "source.fixAll.eslint": "explicit" // Corrige automaticamente problemas do ESLint ao salvar
  },
  "eslint.validate": ["javascript", "javascriptreact"], // Valida arquivos JavaScript e React com ESLint
  "files.eol": "\n", // Define o fim de linha como LF
  "files.trimTrailingWhitespace": true, // Remove espaços em branco no final das linhas
  "git.autofetch": true, // Busca automaticamente atualizações do Git
  "javascript.suggest.autoImports": true, // Sugere importações automáticas para JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always", // Atualiza importações ao mover arquivos javascript
  "typescript.suggest.autoImports": true, // Sugere importações automáticas para TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always" // Atualiza importações ao mover arquivos TypeScript

